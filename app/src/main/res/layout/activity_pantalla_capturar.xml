<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    tools:context="com.agrizar.berriesconteo.pantalla_capturar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#45962f"
            android:padding="15dp"
            android:text="CAPTURAR"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="27sp" />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:layout_margin="5dp"
                    android:elevation="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_spiners"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:text="Modulo : "
                        android:textStyle="bold"
                        />

                    <Spinner
                        android:id="@+id/inpModulo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_spiners"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:hint="Modulo"

                        />


                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_spiners"
                android:background="@color/white"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:elevation="2dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:layout_weight="2"
                    android:text="Sector : "
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Spinner
                    android:id="@+id/inpSector"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:hint="Sector"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_spiners"
                android:background="@color/white"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:elevation="2dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:layout_weight="2"
                    android:text="Estacion : "
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Spinner
                    android:id="@+id/inpEstacion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:hint="Modulo"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_spiners"
                android:background="@color/white"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal"
                android:elevation="2dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:layout_weight="2"
                    android:text="Fruto : "
                    android:gravity="center"
                    android:textStyle="bold"
                    />

                <Spinner
                    android:id="@+id/inpFruto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:hint="Fruto"
                    android:textAlignment="center"
                    android:layout_weight="1"

                    />

            </LinearLayout>



            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/container_frame_layout"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_scaner"
            android:layout_gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_margin="5dp"
            android:elevation="2dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inpNumEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#ffffff"
                android:gravity="center"
                android:hint="Numero de empleado"
                android:textSize="25dp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mensajeCorrecto"
        android:layout_width="300dp"
        android:layout_height="350dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:visibility="invisible"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/correcto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrado Correctamente"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"

            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>