<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_background"
    tools:context="com.agrizar.berriesconteo.pantalla_capturar">

<!--    CONTENEDOR GENERAL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<!--        TITULO CAPTURAR-->
        <TextView
            android:id="@+id/titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/redondeo"
            android:padding="15dp"
            android:text="CAPTURAR"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="27sp" />
<!--        CONTENEDOR CON SCROLL-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >
<!--        CONTENEDOR DE LOS SPINNERS-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="6"
                >
                <!--                SPINNER DE MODULO-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:background="@drawable/spinners"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:layout_margin="5dp"
                    android:elevation="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_spiners"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:text="Lugar : "
                        android:textStyle="bold"
                        />
                    <Spinner
                        android:id="@+id/inpLugar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_spiners"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:hint="Modulo"
                        />
                </LinearLayout>

<!--                SPINNER DE MODULO-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:background="@drawable/spinners"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:layout_margin="5dp"
                    android:elevation="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_spiners"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:text="Modulo : "
                        android:textStyle="bold"
                        />
                    <Spinner
                        android:id="@+id/inpModulo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_spiners"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:hint="Modulo"
                        android:visibility="invisible"
                        />
                </LinearLayout>
<!--                SPINNER DE SECTOR-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:background="@drawable/spinners"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:elevation="2dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:layout_weight="2"
                    android:text="Sector : "
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Spinner
                    android:id="@+id/inpSector"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:hint="Sector"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    />
                </LinearLayout>
<!--                SPINNER DE ESTACION-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:background="@drawable/spinners"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:elevation="2dp"
                    >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:layout_weight="2"
                    android:text="Estacion : "
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Spinner
                    android:id="@+id/inpEstacion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:hint="Modulo"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    />
                </LinearLayout>
<!--            SPINNER DE FRUTO-->
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:background="@drawable/spinners"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:elevation="2dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_spiners"
                        android:layout_weight="2"
                        android:text="Fruto : "
                        android:gravity="center"
                        android:textStyle="bold"
                        />
                    <Spinner
                        android:id="@+id/inpFruto"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_spiners"
                        android:hint="Fruto"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        />
                </LinearLayout>
<!--            SPINNER DE CUBETAS-->
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_spiners"
                    android:background="@drawable/spinners"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:elevation="2dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_spiners"
                        android:layout_weight="2"
                        android:text="Cubetas : "
                        android:gravity="center"
                        android:textStyle="bold"
                        />
                    <Spinner
                        android:id="@+id/inpCubetas"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_spiners"
                        android:hint="Cubetas"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
<!--    FRAME DEL SCANNER-->
        <FrameLayout
            android:id="@+id/container_frame_layout"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_scaner"
            android:layout_gravity="center"/>
<!--        CONTENEDOR PARA EL INPUT CON NUMERO DE EMPLEADO-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_margin="5dp"
            android:elevation="2dp"
            >
<!--        LABEL DONDE APARECE EL NUMERO DE EMPLEADO-->
            <TextView
                android:layout_marginTop="40dp"
                android:id="@+id/inpNumEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de empleado: "
                android:background="@drawable/alert"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <!--MENSAJE QUE PREGUNTA LA ACEPTACION DE LAS CUBETAS-->
    <RelativeLayout
        android:id="@+id/mensajeAlert"
        android:layout_width="360dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/alert"
        android:visibility="invisible"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/pregunta" />
        <TextView
            android:id="@+id/mensajeConteoEmpleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El empleado ha contado: "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="210dp"
            />
        <TextView
            android:id="@+id/mensajeCubetasAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se le agregarán: "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="180dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿La cantidad de cubetas es correcta?"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom">
            <Button
                android:id="@+id/botonConfirmacion"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#449CDF"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="20dp"
                android:text="SI" />
            <Button
                android:id="@+id/botonCancelacion"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#D35A5A"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="NO" />
        </LinearLayout>
    </RelativeLayout>
<!--MENSAJE QUE INDICA QUE SE REGISTRO CON EXITO-->
    <RelativeLayout
        android:id="@+id/mensajeCorrecto"
        android:layout_width="300dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/alert"
        android:visibility="invisible"
        >
        <ImageView
            android:id="@+id/imgCorrecto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/correcto" />
        <TextView
            android:id="@+id/txtCorrecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrado Correctamente"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>